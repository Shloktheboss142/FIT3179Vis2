{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "params": [
      {
        "name": "Year_selection",
        "value": 2020,
        "bind": {
          "input": "range",
          "min": 2000, 
          "max": 2021,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "projection": {
      "type": "equirectangular"
    },
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Shloktheboss142/FIT3179_Homework_4/main/data/ne_110m_admin_0_countries.topojson",
          "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
        },
        "transform": [
            {
              "calculate": "'No data for ' + datum.properties.NAME",
              "as": "note"
            }
        ],
        "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "darkgray" },
        "encoding": { "tooltip": { "field": "note" } }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Shloktheboss142/FIT3179_Homework_4/main/data/oceans.topojson",
          "format": { "type": "topojson", "feature": "oceans" }
        },
        "mark": { "type": "geoshape", "fill": "#8eb3ed" }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Shloktheboss142/FIT3179_Homework_4/main/data/WorldMapWithGraticules.topojson",
          "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
        },
        "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Shloktheboss142/FIT3179Vis2/main/data/Renewable%20Energy%20Data.csv"
        },
        "transform": [
          {
            "lookup": "LOCATION",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Shloktheboss142/FIT3179_Homework_4/main/data/ne_110m_admin_0_countries.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          },
          { "filter": "datum.TIME == Year_selection" }
        ],
        "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
        "encoding": {
          "shape": { "field": "geo", "type": "geojson" },
          "color": {
            "field": "Value",
            "type": "quantitative",
            "title": "Energy Generated (KTOE)",
            "scale": { "domain": [0, 350000], "scheme": "greens" },
            "legend": { "orient": "none", "legendX": 170, "legendY": 310, "title": "Energy Generated (KTOE)", "direction": "horizontal" }
          },
          "tooltip": [
            { "field": "LOCATION", "type": "nominal", "title": "Country" },
            {
              "field": "Value",
              "type": "quantitative",
              "format": ".0f",
              "title": "Energy Generated (KTOE)"
            }
          ]
        }
      }
    ],
    "config": {}
  }
  