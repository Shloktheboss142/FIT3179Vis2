{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/Shloktheboss142/FIT3179Vis2/main/data/stackedbar1.csv"},
    "height": 400,
    "width": "container",
    "mark": "bar",
    "params": [
        {
          "name": "Country",
          "select": { "type": "point", "fields": ["Country"] },
          "bind": {
            "Country": {
              "input": "select",
              "options": [
                null,
                "Argentina",
                "Brazil",
                "Egypt",
                "India",
                "Indonesia",
                "Mainland China",
                "Malaysia",
                "Qatar",
                "Singapore",
                "Sri Lanka",
                "United Arab Emirates"
              ],
              "labels": [
                "All",
                "Argentina",
                "Brazil",
                "Egypt",
                "India",
                "Indonesia",
                "Mainland China",
                "Malaysia",
                "Qatar",
                "Singapore",
                "Sri Lanka",
                "United Arab Emirates"
              ],
              "name": "Country Selection: "
            }
          }
        }
      ],
      "transform": [{ "filter": { "param": "Country", "field": "Country" } }],
    "encoding": {
      "x": {
        "timeUnit": "year",
        "field": "Year",
        "type": "ordinal",
        "title": "Year"
      },
      "y": {
        "aggregate": "sum",
        "field": "Capacity GW & Generation TWh",
        "type": "quantitative",
        "title": "Energy Generated (TWh)"
      },
      "color": {
        "field": "Sector",
        "type": "nominal",
        "scale": {
          "domain": [
            "Coal",
            "Natural Gas",
            "Nuclear",
            "Oil",
            "Wind",
            "Solar",
            "Hydroelectric",
            "Biomass"
          ],
          "range": [
            "#666666",
            "#fb9a99",
            "#b2df8a",
            "#33a02c",
            "#fdbf6f",
            "#a6cee3",
            "#1f78b4",
            "#ff7f00"
          ]
        },
        "title": "Sector",
        "legend": { "orient": "none", "legendX": 10, "legendY": 5 }
      },
      "tooltip": [
        {
          "aggregate": "sum",
          "field": "Capacity GW & Generation TWh",
          "type": "quantitative",
          "format": ".2f",
          "title": "Energy Generated (TWh)"
        },
        {
          "field": "Sector",
          "type": "nominal"
        },
        {
          "field": "Year",
          "type": "ordinal"
        }
      ]
    }
  }