{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "description": "Stock prices of 5 Tech Companies over Time.",
    "data": {
      "url": "https://raw.githubusercontent.com/Shloktheboss142/FIT3179Vis2/main/data/consumption.csv"
    },
    "layer": [
      {
        "mark": {
          "type": "line",
          "interpolate": "monotone"
        },
        "params": [
          {
            "name": "CountrySelect",
            "select": { "type": "point", "fields": ["Country"] },
            "bind": {
              "Country": {
                "input": "select",
                "options": [
                  null,
                  "Argentina",
                  "Brazil",
                  "Egypt",
                  "India",
                  "Indonesia",
                  "China",
                  "Malaysia",
                  "Qatar",
                  "Singapore",
                  "Sri Lanka",
                  "United Arab Emirates"
                ],
                "labels": [
                  "All",
                  "Argentina",
                  "Brazil",
                  "Egypt",
                  "India",
                  "Indonesia",
                  "China",
                  "Malaysia",
                  "Qatar",
                  "Singapore",
                  "Sri Lanka",
                  "United Arab Emirates"
                ],
                "name": "Country Selection: "
              }
            }
          }
        ]
      },
      {
        "mark": {
          "type": "point",
          "filled": true,
          "size": 75
        }
      },
      {
        "transform": [{ "filter": { "field": "Year", "oneOf": ["2021"] } }],
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 7
        },
        "encoding": {
          "x": { "field": "Year", "type": "ordinal" },
          "y": { "field": "Primary energy consumption per capita (kWh/person)", "type": "quantitative" },
          "text": { "field": "Country", "type": "nominal" }
        }
      }
    ],
    "transform": [{ "filter": { "param": "CountrySelect", "field": "Country" } }],
    "encoding": {
      "x": {
        "field": "Year",
        "type": "ordinal",
        "title": "Year",
        "axis": { "labelAngle": 0, "labelAlign": "center" }
      },
      "y": {
        "field": "Primary energy consumption per capita (kWh/person)",
        "type": "quantitative",
        "title": "Renewable Energy (KTOE)"
      },
      "color": {
        "field": "Country",
        "type": "nominal",
        "title": "Country",
        "legend": { "orient": "none", "legendX": -100, "legendY": -70, "direction": "horizontal"}
      },
      "tooltip": [
        { "field": "Country", "type": "nominal", "title": "Country" },
        { "field": "Year", "type": "ordinal", "title": "Year" },
        {
          "field": "Primary energy consumption per capita (kWh/person)",
          "type": "quantitative",
          "format": ".0f",
          "title": "Energy Generated (KTOE)"
        }
      ]
    },
    "config": {}
  }
  